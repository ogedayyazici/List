(define (append-list proc n)
  (let loop ((n n))
    (unless (zero? n)
      (define val(proc))
      (begin (set! lst (append lst (list val)))   
      (loop (- n 1))))
    )
)

(define (delete-n l n)
  (if (= n 0) 
      (cdr l)
      (append (list (car l)) (delete-n (cdr l) (- n 1)))))

(define (delete-loop l val)
  (delete-n l val))

